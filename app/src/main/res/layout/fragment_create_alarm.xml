<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewmodel"
                  type="com.depromeet.universalnotice.ui.create.CreateAlarmViewModel"/>
    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F4F4F5">

            <Button
                    android:id="@+id/create_cancel_btn"
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="취소"
                    android:onClick="@{viewmodel::onClick}"
                    android:textColor="#000000"
                    android:background="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
            />

            <Button
                    android:id="@+id/create_save_btn"
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="저장"
                    android:onClick="@{viewmodel::onClick}"
                    android:textColor="#000000"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
            />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/create_category_btn_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_cancel_btn"
                    android:layout_marginTop="40dp"
                    android:paddingHorizontal="12dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/create_category_btn1"
                        android:layout_marginRight="8dp"
                        android:layout_width="104dp"
                        android:layout_height="93dp"
                        android:onClick="@{viewmodel::onClick}"
                        app:layout_constraintRight_toLeftOf="@id/create_category_btn2"
                        android:background="@drawable/layout_style_round_square">

                    <ImageView
                            android:id="@+id/create_category_image1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="15dp"
                            setCategory="@{viewmodel.category}"
                            android:src="@drawable/ic_alarm_category_sleep"/>
                    <TextView
                            android:id="@+id/create_category_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#0d0d0d"
                            setCategoryText="@{viewmodel.category}"
                            android:lineSpacingExtra="6sp"
                            android:gravity="center_horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="15dp"
                            android:text="수면"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/create_category_btn2"
                        android:layout_width="104dp"
                        android:layout_height="93dp"
                        android:onClick="@{viewmodel::onClick}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/layout_style_round_square"
                        >
                    <ImageView
                            android:id="@+id/create_category_image2"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="15dp"
                            setCategory="@{viewmodel.category}"
                            android:src="@drawable/ic_alarm_category_todo"

                    />
                    <TextView
                            android:id="@+id/create_category_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:lineSpacingExtra="6sp"
                            setCategoryText="@{viewmodel.category}"
                            android:gravity="center_horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="15dp"
                            android:text="할일"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/create_category_btn3"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintLeft_toRightOf="@id/create_category_btn2"
                        android:layout_width="104dp"
                        android:layout_height="93dp"
                        android:onClick="@{viewmodel::onClick}"
                        android:background="@drawable/layout_style_round_square">
                    <ImageView
                            android:id="@+id/create_category_image3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="15dp"
                            setCategory="@{viewmodel.category}"
                            android:src="@drawable/ic_alarm_category_schedule_off"/>
                    <TextView
                            android:id="@+id/create_category_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:lineSpacingExtra="6sp"
                            setCategoryText="@{viewmodel.category}"
                            android:gravity="center_horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="15dp"
                            android:text="약속"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/create_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/create_category_btn_layout"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"

                    android:background="@drawable/layout_style_round_square"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:lineSpacingExtra="7sp"
                        android:text="알림 이름"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp"
                />
                <EditText
                        android:id="@+id/create_title_edittext"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:lineSpacingExtra="7sp"
                        android:background="@null"
                        android:hint="수면"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="113dp"
                        android:onTextChanged="@{viewmodel::onTextChanged}"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/create_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/layout_style_round_square"
                    app:layout_constraintTop_toBottomOf="@id/create_title_layout"
                    android:layout_marginTop="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:lineSpacingExtra="7sp"
                        android:text="목표 시간"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="16dp"
                />

                <TextView
                        android:id="@+id/create_target_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#80666666"
                        android:lineSpacingExtra="7sp"
                        android:text="목표 시간에 알람벨 울리기"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/create_target_time_btn"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="6dp"
                        android:onClick="@{viewmodel::onClick}"
                        setIsActiveText="@{viewmodel.isAlarm}"
                />
                <ImageView
                        android:id="@+id/create_target_time_btn"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="32dp"
                        android:background="@null"
                        android:src="@drawable/ic_icon_checked_off"
                        android:scaleType="centerCrop"
                        android:onClick="@{viewmodel::onClick}"
                        setIsActiveBtn="@{viewmodel.isAlarm}"
                />
                <TextView
                        android:id="@+id/create_target_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:textColor="#333333"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="-22sp"
                        android:text="@{viewmodel.targetTime}"
                        android:onClick="@{viewmodel::onClick}"
                        android:textStyle="normal"
                        android:fontFamily="@font/time_font_family"
                        app:layout_constraintTop_toBottomOf="@id/create_target_time_text"
                        app:layout_constraintStart_toStartOf="@id/create_target_time_text"
                        android:layout_marginTop="18dp"
                />
                <TextView
                        android:id="@+id/create_target_time_ampm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="#0d0d0d"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="-4sp"
                        android:text="@{viewmodel.targetTime_ampm}"
                        android:textStyle="normal"
                        android:fontFamily="@font/time_font_family"
                        app:layout_constraintStart_toEndOf="@id/create_target_time"
                        app:layout_constraintBottom_toBottomOf="@id/create_target_time"
                        android:layout_marginLeft="9dp"
                        android:layout_marginBottom="4dp"
                />

                <Button
                        android:id="@+id/create_target_time_before"
                        android:layout_width="88dp"
                        android:layout_height="27dp"
                        android:background="@drawable/button_style_round_square_blue"
                        app:layout_constraintTop_toBottomOf="@+id/create_target_time"
                        app:layout_constraintStart_toStartOf="@id/create_target_time"
                        android:layout_marginTop="23dp"
                        android:text="이전 알림"
                        android:textColor="#298afd"
                        style="?android:attr/borderlessButtonStyle"
                        setAlarmTiming="@{viewmodel.alarmTiming}"
                        android:onClick="@{viewmodel::onClick}"
                />

                <Button
                        android:id="@+id/create_target_time_after"
                        android:layout_width="88dp"
                        android:layout_height="27dp"
                        android:background="@drawable/button_style_round_square"
                        app:layout_constraintStart_toEndOf="@id/create_target_time_before"
                        app:layout_constraintTop_toTopOf="@id/create_target_time_before"
                        android:layout_marginLeft="12dp"
                        android:text="이후 알림"
                        android:textColor="#80666666"
                        style="?android:attr/borderlessButtonStyle"
                        setAlarmTiming="@{viewmodel.alarmTiming}"
                        android:onClick="@{viewmodel::onClick}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/create_interval_layout"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    app:layout_constraintTop_toBottomOf="@id/create_time_layout"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/layout_style_round_square"
                    android:layout_marginHorizontal="16dp"
            >
                <TextView
                        android:id="@+id/create_time_interval_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:lineSpacingExtra="7sp"
                        android:text="시간 구간"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="16dp"
                />
                <TextView
                        android:id="@+id/crete_time_interval_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#80666666"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="0sp"
                        android:text="@{viewmodel.intervalStartTime}"
                        app:layout_constraintStart_toEndOf="@id/create_time_interval_text"
                        app:layout_constraintTop_toTopOf="@id/create_time_interval_text"
                        android:layout_marginLeft="38dp"
                        android:onClick="@{viewmodel::onClick}"
                />
                <TextView
                        android:id="@+id/create_time_interval_starttime_ampm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#80666666"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="@{viewmodel.intervalStartTime_ampm}"
                        app:layout_constraintStart_toEndOf="@id/crete_time_interval_starttime"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="6dp"
                        android:onClick="@{viewmodel::onClick}"
                />

                <TextView
                        android:id="@+id/create_time_interval_to_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#999999"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="5sp"
                        android:text="~"
                        app:layout_constraintStart_toEndOf="@id/create_time_interval_starttime_ampm"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="8dp"
                />

                <TextView
                        android:id="@+id/crete_time_interval_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#0d0d0d"
                        android:letterSpacing="0.1"
                        android:textStyle=""
                        android:lineSpacingExtra="0sp"
                        android:text="@{viewmodel.intervalEndTime}"
                        app:layout_constraintTop_toTopOf="@id/crete_time_interval_starttime"
                        app:layout_constraintStart_toEndOf="@id/create_time_interval_to_from"
                        android:layout_marginLeft="8dp"
                        android:onClick="@{viewmodel::onClick}"
                />

                <TextView
                        android:id="@+id/create_time_interval_endtime_ampm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#0d0d0d"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4sp"
                        android:text="@{viewmodel.intervalEndTime_ampm}"
                        app:layout_constraintTop_toTopOf="@id/create_time_interval_starttime_ampm"
                        app:layout_constraintStart_toEndOf="@id/crete_time_interval_endtime"
                        android:layout_marginLeft="6dp"
                        android:onClick="@{viewmodel::onClick}"
                />

                <TextView
                        android:id="@+id/create_time_alarm_interval_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#298afd"
                        android:lineSpacingExtra="7sp"
                        android:gravity="center_horizontal"
                        android:text="@{viewmodel.alarmInterval}"
                        app:layout_constraintStart_toStartOf="@id/crete_time_interval_starttime"
                        app:layout_constraintTop_toTopOf="@id/create_time_alarm_interval_text"
                />

                <SeekBar
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/create_time_alarm_interval_time"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="53dp"
                        android:min="0"
                        android:max="6"
                        android:progress="1"
                        android:thumbTint="#298afd"
                        android:progressTint="#298afd"
                        android:onProgressChanged="@{viewmodel::onProgressChanged}"
                />

                <TextView
                        android:id="@+id/create_time_alarm_interval_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:lineSpacingExtra="7sp"
                        android:text="알림 간격"
                        app:layout_constraintTop_toBottomOf="@id/create_time_interval_text"
                        app:layout_constraintStart_toStartOf="@id/create_time_interval_text"
                        android:layout_marginTop="18dp"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/create_repeat_layout"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:layout_constraintTop_toBottomOf="@id/create_interval_layout"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/layout_style_round_square">

                <TextView
                        android:id="@+id/create_repeat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#999999"
                        android:lineSpacingExtra="7sp"
                        android:text="반복"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="16dp"
                />

                <TextView
                        android:id="@+id/create_repeat_monday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        android:text="월"
                        app:layout_constraintStart_toEndOf="@id/create_repeat_text"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="69dp"
                        android:onClick="@{viewmodel::onClick}"
                        setDaysOfTheWeek="@{viewmodel.day_of_the_week[0]}"
                />
                <TextView
                        android:id="@+id/create_repeat_tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        android:text="화"
                        app:layout_constraintStart_toEndOf="@id/create_repeat_monday"
                        app:layout_constraintTop_toTopOf="@id/create_repeat_monday"
                        android:layout_marginLeft="16.8dp"
                        android:onClick="@{viewmodel::onClick}"
                        setDaysOfTheWeek="@{viewmodel.day_of_the_week[1]}"
                />
                <TextView
                        android:id="@+id/create_repeat_wednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        android:text="수"
                        app:layout_constraintStart_toEndOf="@id/create_repeat_tuesday"
                        app:layout_constraintTop_toTopOf="@id/create_repeat_tuesday"
                        android:layout_marginLeft="16.8dp"
                        android:onClick="@{viewmodel::onClick}"
                        setDaysOfTheWeek="@{viewmodel.day_of_the_week[2]}"
                />
                <TextView
                        android:id="@+id/create_repeat_thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        android:text="목"
                        app:layout_constraintStart_toEndOf="@id/create_repeat_wednesday"
                        app:layout_constraintTop_toTopOf="@id/create_repeat_wednesday"
                        android:layout_marginLeft="16.8dp"
                        android:onClick="@{viewmodel::onClick}"
                        setDaysOfTheWeek="@{viewmodel.day_of_the_week[3]}"
                />
                <TextView
                        android:id="@+id/create_repeat_friday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        android:text="금"
                        app:layout_constraintTop_toTopOf="@id/create_repeat_thursday"
                        app:layout_constraintStart_toEndOf="@id/create_repeat_thursday"
                        android:layout_marginLeft="16.8dp"
                        android:onClick="@{viewmodel::onClick}"
                        setDaysOfTheWeek="@{viewmodel.day_of_the_week[4]}"
                />
                <TextView
                        android:id="@+id/create_repeat_saturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        android:text="토"
                        app:layout_constraintTop_toTopOf="@id/create_repeat_friday"
                        app:layout_constraintStart_toEndOf="@id/create_repeat_friday"
                        android:layout_marginLeft="16.8dp"
                        android:onClick="@{viewmodel::onClick}"
                        setDaysOfTheWeek="@{viewmodel.day_of_the_week[5]}"
                />
                <TextView
                        android:id="@+id/create_repeat_sunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        android:text="일"
                        app:layout_constraintTop_toTopOf="@id/create_repeat_saturday"
                        app:layout_constraintStart_toEndOf="@id/create_repeat_saturday"
                        android:layout_marginLeft="16.8dp"
                        android:onClick="@{viewmodel::onClick}"
                        setDaysOfTheWeek="@{viewmodel.day_of_the_week[6]}"
                />

                <Button
                        android:id="@+id/create_repeat_week_btn"
                        android:layout_width="88dp"
                        android:layout_height="27dp"
                        app:layout_constraintTop_toBottomOf="@id/create_repeat_monday"
                        app:layout_constraintStart_toStartOf="@id/create_repeat_monday"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_style_round_square_blue"
                        android:text="매주반복"
                        android:textColor="#298afd"
                        style="?android:attr/borderlessButtonStyle"
                        android:onClick="@{viewmodel::onClick}"
                        setRepeatType="@{viewmodel.repeatType}"
                />

                <Button
                        android:id="@+id/create_repeat_onetime_btn"
                        android:layout_width="88dp"
                        android:layout_height="27dp"
                        app:layout_constraintTop_toTopOf="@id/create_repeat_week_btn"
                        app:layout_constraintStart_toEndOf="@id/create_repeat_week_btn"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/button_style_round_square"
                        android:text="한 번만"
                        android:textColor="#80666666"
                        style="?android:attr/borderlessButtonStyle"
                        android:onClick="@{viewmodel::onClick}"
                        setRepeatType="@{viewmodel.repeatType}"
                />

                <LinearLayout
                        android:id="@+id/create_repeat_border"
                        android:layout_width="296dp"
                        android:layout_height="2dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
